@using GitHubJobs.Interface.ViewModels

@helper JobsDisplay(IJobModelView jobModel)
{
    <section id="jobs">
        <div class="container">
            @if (jobModel.Jobs != null)
            {
                <div class="row mb-4">

                    @foreach (var job in jobModel.Jobs)
                    {
                        <div class="col-6 my-3">

                            <div class="card">
                                <div class="card-body">
                                    <h4 class="text-dark-blue">@job.Title</h4>
                                    <p class="mb-1 text-black">
                                        <span class="fa fa-briefcase "></span> @job.Company
                                    </p>
                                    <p class="mb-1 text-black">
                                        <span class="fa fa-map-marker"></span> @job.Location
                                    </p>
                                    <p class="text-right">
                                        <a href="">Learn more &gt &gt</a>
                                    </p>
                                </div>
                            </div>


                        </div>
                    }



                </div>
            }
            else
            {
                <div class="alert alert-danger"><span class="fa fa-exclamation-circle"></span> No job found, Please try again</div>
            }



        </div>

    </section>
}